  <!-- Script pequeño para tabs del modal de proyectos -->
  <script>
    function switchProjectTab(mode) {
      const tabReg = document.getElementById('tabProjectRegistrar');
      const tabEd = document.getElementById('tabProjectEditar');
      const contentReg = document.getElementById('tabContentProjectRegistrar');
      const contentEd = document.getElementById('tabContentProjectEditar');

      if (!tabReg || !tabEd || !contentReg || !contentEd) return;

      if (mode === 'editar') {
        tabEd.classList.add('border-[#7B1FA2]', 'text-[#7B1FA2]');
        tabEd.classList.remove('border-transparent', 'text-gray-500');

        tabReg.classList.remove('border-[#7B1FA2]', 'text-[#7B1FA2]');
        tabReg.classList.add('border-transparent', 'text-gray-500');

        contentEd.classList.remove('hidden');
        contentReg.classList.add('hidden');
      } else {
        tabEd.classList.remove('border-[#7B1FA2]', 'text-[#7B1FA2]');
        tabEd.classList.add('border-transparent', 'text-gray-500');

        tabReg.classList.add('border-[#7B1FA2]', 'text-[#7B1FA2]');
        tabReg.classList.remove('border-transparent', 'text-gray-500');

        contentEd.classList.add('hidden');
        contentReg.classList.remove('hidden');
      }
    }

    window.switchProjectTab = switchProjectTab;
  </script>

  <!-- Filtro de tareas en el Kanban (user / supervisor) POR PROYECTO -->
  <script>
    
    const filtroTarea = document.getElementById('filtroTarea');

    if (filtroTarea) {
      filtroTarea.addEventListener('change', (e) => {
        const selected = e.target.value;

        // Detectar qué Kanban está presente en la vista actual
        let rootSelector = '#userKanbanView';
        if (document.getElementById('supervisorKanbanView')) {
          rootSelector = '#supervisorKanbanView';
        }

        const cards = document.querySelectorAll(`${rootSelector} [data-task-id]`);

        cards.forEach((card) => {
          const cardProjectId = card.getAttribute('data-project-id') || '';

          // 1) Sin filtro: mostrar todo
          if (!selected) {
            card.classList.remove('hidden');
            return;
          }

          // 2) Solo tareas sin proyecto
          if (selected === '__no_project__') {
            if (!cardProjectId) {
              card.classList.remove('hidden');
            } else {
              card.classList.add('hidden');
            }
            return;
          }

          // 3) Filtro por proyecto específico
          if (cardProjectId === selected) {
            card.classList.remove('hidden');
          } else {
            card.classList.add('hidden');
          }
        });
      });
    }
  </script>

  <script>
  (function () {
    const filtroTarea = document.getElementById('filtroTarea');
    if (!filtroTarea) return;

    filtroTarea.addEventListener('change', function () {
      const selectedId = this.value;
      // Todas las tarjetas del Kanban del supervisor
      const cards = document.querySelectorAll('#supervisorKanbanView .task-card');

      cards.forEach((card) => {
        const cardId = card.getAttribute('data-task-id');
        if (!selectedId || selectedId === cardId) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    });
  })();
</script>

