<main class="max-w-6xl mx-auto my-8">

  <!-- Id del supervisor actual para filtrar solo sus trabajadores -->
  <script>
    window.currentUserId = `<%= user ? user.id : '' %>`;
  </script>

  <!-- VISTA DASHBOARD SUPERVISOR (NIVEL TÁCTICO) -->
  <section
    id="supervisorDashboardView"
    class="bg-white rounded-2xl p-6 shadow max-w-6xl mx-auto my-8">

    <% 
      const stats = (typeof supervisorMetrics !== 'undefined' ? supervisorMetrics : {});
      const teamLoadSafe = (typeof teamLoad !== 'undefined' ? teamLoad : []);
      const todayTasksSafe = (typeof todayTasks !== 'undefined' ? todayTasks : []);
      const teamRecurringSafe = (typeof teamRecurring !== 'undefined' ? teamRecurring : {});
      const upcomingRecurringSafe = (typeof upcomingRecurring !== 'undefined' ? upcomingRecurring : []);
      const tacticalAlertsSafe = (typeof tacticalAlerts !== 'undefined' ? tacticalAlerts : []);
    %>

    <!-- Encabezado: nivel intermedio -->
    <h2 class="text-xl font-semibold text-[#2E7D32] mb-1">
      Panel Supervisor · Vista Táctica
    </h2>
    <p class="text-sm text-gray-600 mb-4">
      Supervisión de área / equipo. Enfocado en la coordinación diaria,
      distribución de carga y cumplimiento de tareas de tu gente.
    </p>

    <div class="grid gap-4 md:grid-cols-3 text-xs text-gray-600 mb-6">
      <div>
        <p class="font-semibold text-gray-800 mb-1">Rol en la pirámide</p>
        <p>Medio · Supervisores, jefes de área.</p>
      </div>
      <div>
        <p class="font-semibold text-gray-800 mb-1">Tipo de decisión</p>
        <p>Táctico / funcional · Asignación de recursos y prioridades del día.</p>
      </div>
      <div>
        <p class="font-semibold text-gray-800 mb-1">Naturaleza de la información</p>
        <p>Intermedia · detalle por equipo, carga y desempeño.</p>
      </div>
    </div>

    <!-- KPIs de equipo -->
    <div class="grid gap-4 sm:grid-cols-3 mb-6">
      <div class="bg-[#F1F8E9] rounded-xl p-4">
        <p class="text-xs text-gray-500 mb-1">Tareas abiertas del equipo</p>
        <p class="text-2xl font-semibold text-[#33691E]">
          <%= stats.tasksOpen || 0 %>
        </p>
        <p class="text-xs text-gray-600 mt-1">
          Incluye pendientes + en progreso.
        </p>
      </div>

      <div class="bg-[#E3F2FD] rounded-xl p-4">
        <p class="text-xs text-gray-500 mb-1">Tareas vencidas</p>
        <p class="text-2xl font-semibold text-[#1565C0]">
          <%= stats.tasksOverdue || 0 %>
        </p>
        <p class="text-xs text-gray-600 mt-1">
          Revisar asignaciones urgentes.
        </p>
      </div>

      <div class="bg-[#FFF3E0] rounded-xl p-4">
        <p class="text-xs text-gray-500 mb-1">Cierre últimos 7 días</p>
        <p class="text-2xl font-semibold text-[#EF6C00]">
          <%= stats.completionLast7d || 0 %>%
        </p>
        <p class="text-xs text-gray-600 mt-1">
          Meta sugerida: &gt; 80%.
        </p>
      </div>
    </div>

    <!-- Detalle por persona y tareas del día -->
    <div class="grid gap-6 md:grid-cols-2 mb-6">
      <!-- Carga por persona -->
      <div>
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-lg font-semibold text-gray-800">
            Carga por miembro del equipo
          </h3>
          <span class="text-xs text-gray-500">Tu personal directo</span>
        </div>

        <div class="border rounded-2xl overflow-hidden">
          <table class="min-w-full text-sm">
            <thead>
              <tr class="text-left text-gray-500 border-b text-xs uppercase">
                <th class="py-2 px-3">Persona</th>
                <th class="py-2 px-3">Abiertas</th>
                <th class="py-2 px-3">En progreso</th>
                <th class="py-2 px-3">Vencidas</th>
              </tr>
            </thead>
            <tbody class="divide-y text-xs sm:text-sm">
              <% if (teamLoadSafe.length) { %>
                <% teamLoadSafe.forEach(function(u) { %>
                  <tr>
                    <td class="py-2 px-3 font-medium text-gray-800">
                      <%= u.name %>
                    </td>
                    <td class="py-2 px-3"><%= u.tasksOpen || 0 %></td>
                    <td class="py-2 px-3"><%= u.tasksInProgress || 0 %></td>
                    <td class="py-2 px-3 text-[#C62828] font-semibold">
                      <%= u.tasksOverdue || 0 %>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="py-3 text-center text-xs text-gray-500">
                    No hay trabajadores registrados a tu cargo.
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Tareas del día del equipo -->
      <div>
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-lg font-semibold text-gray-800">Tareas del equipo (hoy)</h3>
          <span class="text-xs text-gray-500">Acciones concretas del día</span>
        </div>

        <div class="border rounded-2xl overflow-hidden">
          <table class="min-w-full text-sm">
            <thead>
              <tr class="text-left text-gray-500 border-b text-xs uppercase">
                <th class="py-2 px-3">Tarea</th>
                <th class="py-2 px-3">Asignado</th>
                <th class="py-2 px-3">Estado</th>
                <th class="py-2 px-3">Vence</th>
              </tr>
            </thead>
            <tbody class="divide-y text-xs sm:text-sm">
              <% if (todayTasksSafe.length) { %>
                <% todayTasksSafe.forEach(function(t) { %>
                  <tr>
                    <td class="py-2 px-3 font-medium text-gray-800">
                      <%= t.title %>
                    </td>
                    <td class="py-2 px-3"><%= t.assignee_name %></td>
                    <td class="py-2 px-3">
                      <span
                        class="px-2 py-0.5 rounded-full text-[11px] font-semibold
                        <%= t.status === 'pending' ? 'bg-[#FFFDE7] text-[#F9A825]' :
                            t.status === 'in_progress' ? 'bg-[#E3F2FD] text-[#1565C0]' :
                            t.status === 'review' ? 'bg-[#F3E5F5] text-[#7B1FA2]' :
                            'bg-[#E8F5E9] text-[#2E7D32]' %>">
                        <%= t.status %>
                      </span>
                    </td>
                    <td class="py-2 px-3 text-[11px] text-gray-600">
                      <%= t.due_human || '-' %>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="py-3 text-center text-xs text-gray-500">
                    No hay tareas del equipo programadas para hoy.
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Periodicidad del equipo -->
    <div class="grid gap-4 md:grid-cols-3 text-xs sm:text-sm">
      <!-- Resumen recurrencia -->
      <div>
        <p class="text-gray-500 mb-1">Tareas recurrentes del equipo</p>
        <ul class="space-y-1">
          <li class="flex justify-between">
            <span>Diarias</span>
            <span class="font-semibold"><%= teamRecurringSafe.daily || 0 %></span>
          </li>
          <li class="flex justify-between">
            <span>Semanales</span>
            <span class="font-semibold"><%= teamRecurringSafe.weekly || 0 %></span>
          </li>
          <li class="flex justify-between">
            <span>Mensuales</span>
            <span class="font-semibold"><%= teamRecurringSafe.monthly || 0 %></span>
          </li>
        </ul>
      </div>

      <!-- Próximas recurrentes -->
      <div>
        <p class="text-gray-500 mb-1">Próximas tareas recurrentes (7 días)</p>
        <ul class="space-y-1">
          <% if (upcomingRecurringSafe.length) { %>
            <% upcomingRecurringSafe.forEach(function(t) { %>
              <li>
                <span class="font-medium"><%= t.title %></span>
                <span class="block text-[11px] text-gray-500">
                  <%= t.next_run_human %> · <%= t.assignee_name %>
                </span>
              </li>
            <% }) %>
          <% } else { %>
            <li class="text-xs text-gray-500">
              No hay tareas recurrentes programadas para la próxima semana.
            </li>
          <% } %>
        </ul>
      </div>

      <!-- Alertas tácticas -->
      <div>
        <p class="text-gray-500 mb-1">Alertas tácticas</p>
        <ul class="space-y-1">
          <% if (tacticalAlertsSafe.length) { %>
            <% tacticalAlertsSafe.forEach(function(a) { %>
              <li>
                <span class="font-medium"><%= a.title %></span>
                <span class="block text-[11px] text-gray-500"><%= a.detail %></span>
              </li>
            <% }) %>
          <% } else { %>
            <li class="text-xs text-gray-500">
              No hay alertas críticas actualmente.
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </section>

<!-- VISTA KANBAN SUPERVISOR (inicialmente oculta) -->
<section
  id="supervisorKanbanView"
  class="bg-white rounded-2xl p-6 shadow hidden">

  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-4 gap-3">
    <!-- Izquierda: título + descripción -->
    <div>
      <h2 class="text-xl font-semibold text-[#2E7D32]">Tablero Kanban (Equipo)</h2>
      <p class="text-sm text-gray-600">
        Tareas de tu equipo ordenadas por estado.
      </p>
    </div>

    <!-- Derecha: select alineado (proyectos) -->
    <div class="bg-[#F1F8E9] rounded-xl p-3 md:min-w-[260px]">
      <label for="filtroTarea" class="block text-xs font-medium text-gray-700 mb-1">
        Filtrar por proyecto
      </label>
      <select
        id="filtroTarea"
        class="block w-full rounded-lg border border-gray-300 text-sm px-2 py-1 bg-white focus:outline-none focus:ring-2 focus:ring-[#2E7D32]/60 focus:border-[#2E7D32]">
        <option value="">Todos los proyectos</option>
        <option value="__no_project__">Tareas sin proyecto</option>
        <%
          const fp = (typeof userProjects !== 'undefined' && userProjects && userProjects.length)
            ? userProjects
            : [];
        %>
        <% if (fp.length) { %>
          <% fp.forEach(function(p) { %>
            <option value="<%= p.id %>">
              <%= p.name %>
            </option>
          <% }); %>
        <% } else { %>
          <option value="" disabled>(Sin proyectos donde participas)</option>
        <% } %>
      </select>
    </div>
  </div>

  <!-- Columnas Kanban (igual estilo que user) -->
  <div class="grid gap-4 md:grid-cols-4">

    <!-- Pendientes -->
    <div class="bg-[#F1F8E9] rounded-xl p-3" data-column-status="pending">
      <h3 class="text-sm font-semibold text-gray-700 mb-1">Pendientes</h3>
      <p class="text-xs text-gray-500">Tareas que el equipo aún no comienza.</p>
      <div class="mt-3 space-y-2 kanban-column-body">
        <% if (kanbanTasks && kanbanTasks.pending && kanbanTasks.pending.length) { %>
          <% kanbanTasks.pending.forEach(function (t) { %>
            <article
              class="p-3 bg-white rounded-lg shadow-sm border border-gray-200 text-sm cursor-move task-card"
              draggable="true"
              data-task-id="<%= t.id %>"
              data-task-status="pending"
              data-project-id="<%= t.project_id || '' %>">
              <h4 class="font-semibold text-gray-800"><%= t.title || t.name %></h4>

              <% if (t.project_name) { %>
                <p class="text-[11px] text-gray-500">
                  Proyecto: <%= t.project_name %>
                </p>
              <% } %>

              <% if (t.assignee_name) { %>
                <p class="text-[11px] text-gray-500">
                  Asignado a: <%= t.assignee_name %>
                </p>
              <% } %>
            </article>
          <% }); %>
        <% } else { %>
          <p class="text-xs text-gray-400 mt-2">
            No hay tareas pendientes del equipo.
          </p>
        <% } %>
      </div>
    </div>

    <!-- En progreso -->
    <div class="bg-[#E3F2FD] rounded-xl p-3" data-column-status="in_progress">
      <h3 class="text-sm font-semibold text-gray-700 mb-1">En progreso</h3>
      <p class="text-xs text-gray-500">Tareas que el equipo está ejecutando.</p>
      <div class="mt-3 space-y-2 kanban-column-body">
        <% if (kanbanTasks && kanbanTasks.in_progress && kanbanTasks.in_progress.length) { %>
          <% kanbanTasks.in_progress.forEach(function (t) { %>
            <article
              class="p-3 bg-white rounded-lg shadow-sm border border-gray-200 text-sm cursor-move task-card"
              draggable="true"
              data-task-id="<%= t.id %>"
              data-task-status="in_progress"
              data-project-id="<%= t.project_id || '' %>">
              <h4 class="font-semibold text-gray-800"><%= t.title || t.name %></h4>

              <% if (t.project_name) { %>
                <p class="text-[11px] text-gray-500">
                  Proyecto: <%= t.project_name %>
                </p>
              <% } %>

              <% if (t.assignee_name) { %>
                <p class="text-[11px] text-gray-500">
                  Asignado a: <%= t.assignee_name %>
                </p>
              <% } %>
            </article>
          <% }); %>
        <% } else { %>
          <p class="text-xs text-gray-400 mt-2">
            No hay tareas en progreso del equipo.
          </p>
        <% } %>
      </div>
    </div>

    <!-- En revisión -->
    <div class="bg-[#FFFDE7] rounded-xl p-3" data-column-status="review">
      <h3 class="text-sm font-semibold text-gray-700 mb-1">En revisión</h3>
      <p class="text-xs text-gray-500">Tareas que están esperando revisión.</p>
      <div class="mt-3 space-y-2 kanban-column-body">
        <% if (kanbanTasks && kanbanTasks.review && kanbanTasks.review.length) { %>
          <% kanbanTasks.review.forEach(function (t) { %>
            <article
              class="p-3 bg-white rounded-lg shadow-sm border border-gray-200 text-sm cursor-move task-card"
              draggable="true"
              data-task-id="<%= t.id %>"
              data-task-status="review"
              data-project-id="<%= t.project_id || '' %>">
              <h4 class="font-semibold text-gray-800"><%= t.title || t.name %></h4>

              <% if (t.project_name) { %>
                <p class="text-[11px] text-gray-500">
                  Proyecto: <%= t.project_name %>
                </p>
              <% } %>

              <% if (t.assignee_name) { %>
                <p class="text-[11px] text-gray-500">
                  Asignado a: <%= t.assignee_name %>
                </p>
              <% } %>
            </article>
          <% }); %>
        <% } else { %>
          <p class="text-xs text-gray-400 mt-2">
            No hay tareas en revisión del equipo.
          </p>
        <% } %>
      </div>
    </div>

    <!-- Completadas -->
    <div class="bg-[#FFF3E0] rounded-xl p-3" data-column-status="done">
      <h3 class="text-sm font-semibold text-gray-700 mb-1">Completadas</h3>
      <p class="text-xs text-gray-500">Tareas completadas por tu equipo.</p>
      <div class="mt-3 space-y-2 kanban-column-body">
        <% if (kanbanTasks && kanbanTasks.done && kanbanTasks.done.length) { %>
          <% kanbanTasks.done.forEach(function (t) { %>
            <article
              class="p-3 bg-white rounded-lg shadow-sm border border-gray-200 text-sm cursor-move task-card"
              draggable="true"
              data-task-id="<%= t.id %>"
              data-task-status="done"
              data-project-id="<%= t.project_id || '' %>">
              <h4 class="font-semibold text-gray-800"><%= t.title || t.name %></h4>

              <% if (t.project_name) { %>
                <p class="text-[11px] text-gray-500">
                  Proyecto: <%= t.project_name %>
                </p>
              <% } %>

              <% if (t.assignee_name) { %>
                <p class="text-[11px] text-gray-500">
                  Asignado a: <%= t.assignee_name %>
                </p>
              <% } %>
            </article>
          <% }); %>
        <% } else { %>
          <p class="text-xs text-gray-400 mt-2">
            No hay tareas completadas del equipo.
          </p>
        <% } %>
      </div>
    </div>

  </div>
</section>

  <!-- MODAL: Registrar / Editar usuario (Supervisor -> Trabajadores) -->
  <div
    id="modalNuevoUsuario"
    class="fixed inset-0 z-40 hidden items-center justify-center bg-black/40">
    <div class="bg-white rounded-2xl shadow-lg w-full max-w-md mx-4">
      <!-- Header -->
      <div class="px-5 py-3 border-b flex justify-between items-center">
        <h3 class="text-base font-semibold text-gray-800">
          Gestión de usuarios del equipo
        </h3>
        <button
          type="button"
          class="text-gray-500 hover:text-gray-700"
          onclick="toggleModal('modalNuevoUsuario', false)">
          ✕
        </button>
      </div>

      <!-- Tabs -->
      <div class="px-5 pt-3 border-b flex gap-4 text-sm">
        <button
          id="tabUsuarioRegistrar"
          type="button"
          class="pb-2 border-b-2 border-[#2E7D32] text-[#2E7D32] font-medium"
          onclick="switchUsuarioTab('registrar')">
          Registrar usuario
        </button>
        <button
          id="tabUsuarioEditar"
          type="button"
          class="pb-2 border-b-2 border-transparent text-gray-500 hover:text-gray-700"
          onclick="switchUsuarioTab('editar')">
          Editar usuario
        </button>
      </div>

      <!-- Contenido -->
      <div class="px-5 py-4 text-sm">
        <!-- TAB: REGISTRAR -->
        <div id="tabContentUsuarioRegistrar" class="space-y-3">
          <form
            id="formNuevoUsuario"
            class="space-y-3">

            <!-- Nombre -->
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Nombre completo</label>
              <input
                type="text"
                name="name"
                class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#2E7D32]"
                placeholder="Ej: Juan Pérez"
                required>
            </div>

            <!-- Correo -->
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Correo corporativo</label>
              <input
                type="email"
                name="email"
                class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#2E7D32]"
                placeholder="usuario@empresa.cl"
                required>
            </div>

            <!-- Teléfono -->
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Teléfono</label>
              <input
                type="text"
                name="telephone"
                class="w-full border rounded-lg px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#2E7D32]"
                placeholder="+569...">
            </div>

            <!-- Rol fijo / Estado -->
            <div class="grid gap-3 sm:grid-cols-2">
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">Rol</label>
                <input
                  type="text"
                  value="Trabajador"
                  disabled
                  class="w-full border rounded-lg px-3 py-2 bg-gray-100 text-gray-600 text-xs">
                <p class="mt-1 text-[11px] text-gray-400">
                  * Como Supervisor, solo puedes registrar usuarios de tipo Trabajador.
                  El sistema asigna automáticamente el rol, el área y el jefe directo.
                </p>
              </div>
              <div>
                <label class="block text-xs font-medium text-gray-700 mb-1">Estado</label>
                <select
                  name="status"
                  class="w-full border rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-1 focus:ring-[#2E7D32]">
                  <option value="active">Activo</option>
                  <option value="suspended">Suspendido</option>
                </select>
              </div>
            </div>

            <!-- Footer -->
            <div class="flex justify-end gap-2 pt-2">
              <button
                type="button"
                onclick="toggleModal('modalNuevoUsuario', false)"
                class="px-3 py-1.5 rounded-lg text-xs border text-gray-600 hover:bg-gray-50">
                Cancelar
              </button>
              <button
