<%- include('layout', { title: 'Login', body: `
  <section class="max-w-md mx-auto bg-white rounded-xl shadow p-6 space-y-4">
    <h1 class="text-xl font-semibold">Iniciar sesión</h1>
    <form method="POST" action="/api/login" class="space-y-3">
      <div>
        <label class="block text-sm mb-1">Usuario</label>
        <input class="w-full rounded-md border px-3 py-2" type="text" name="username" required>
      </div>
      <div>
        <label class="block text-sm mb-1">Contraseña</label>
        <input class="w-full rounded-md border px-3 py-2" type="password" name="password" required>
      </div>
      <button class="w-full rounded-md border px-3 py-2 hover:bg-gray-100" type="submit">Entrar</button>
    </form>
  </section>
` }) %>
