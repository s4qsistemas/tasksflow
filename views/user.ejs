<% 
  function statusLabel(st) {
    switch (st) {
      case 'pending': return 'pendiente';
      case 'in_progress': return 'en progreso';
      case 'review': return 'en revisi√≥n';
      case 'done': return 'completada';
      default: return st;
    }
  }

  function priorityLabel(p) {
    switch (p) {
      case 'low': return 'baja';
      case 'normal': return 'media';
      case 'high': return 'alta';
      case 'critical': return 'cr√≠tica';
      default: return p || 'sin prioridad';
    }
  }

  // --- C√°lculos para el dashboard usuario ---
  const hasTasks = (typeof tasks !== 'undefined') && tasks && tasks.length;
  const totalTasks = hasTasks ? tasks.length : 0;

  let totalInProgress = 0;
  let totalDone = 0;
  let totalReview = 0;
  let totalPending = 0;

  if (hasTasks) {
    tasks.forEach(function (t) {
      if (t.status === 'pending') totalPending++;
      if (t.status === 'in_progress') totalInProgress++;
      if (t.status === 'done') totalDone++;
      if (t.status === 'review') totalReview++;
    });
  }
