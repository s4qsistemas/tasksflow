<!-- VISTA DASHBOARD ADMIN (NIVEL ESTRATÉGICO) -->
<section id="adminDashboardView" class="max-w-6xl mx-auto my-8">
  <% 
    const kpis = (typeof adminMetrics !== 'undefined' ? adminMetrics : {});
    const projectsSafe = (typeof projects !== 'undefined' ? projects : []);
    const areasSummarySafe = (typeof areasSummary !== 'undefined' ? areasSummary : []);
    const recurringSummarySafe = (typeof recurringSummary !== 'undefined' ? recurringSummary : {});
    const nextCriticalTasksSafe = (typeof nextCriticalTasks !== 'undefined' ? nextCriticalTasks : []);
    const strategicAlertsSafe = (typeof strategicAlerts !== 'undefined' ? strategicAlerts : []);
  %>

  <!-- Encabezado: nivel de la pirámide -->
  <div class="bg-white rounded-2xl p-6 shadow mb-6">
    <h2 class="text-2xl font-semibold text-[#2E7D32] mb-1">
      Panel Admin · Vista Estratégica
    </h2>
    <p class="text-sm text-gray-600 mb-3">
      Jefatura / Gerencia general. Información sintetizada para decisiones de
      mediano y largo plazo: estado global de la empresa, proyectos y carga
      de trabajo por áreas.
    </p>

    <div class="grid gap-4 md:grid-cols-3 text-xs text-gray-600">
      <div>
        <p class="font-semibold text-gray-800 mb-1">Rol en la pirámide</p>
        <p>Punta · Jefes, Gerentes, Directores.</p>
      </div>
      <div>
        <p class="font-semibold text-gray-800 mb-1">Tipo de decisión</p>
        <p>Estratégico · Políticas, prioridades, visión global.</p>
      </div>
      <div>
        <p class="font-semibold text-gray-800 mb-1">Naturaleza de la información</p>
        <p>Resumida, agregada, enfocada a tendencias y riesgos.</p>
      </div>
    </div>
  </div>

  <!-- KPIs sintetizados -->
  <div class="grid gap-4 md:grid-cols-4 mb-6">
    <!-- Proyectos -->
    <div class="bg-white p-4 rounded-2xl shadow">
      <p class="text-xs uppercase tracking-wide text-gray-500">
        Proyectos activos
      </p>
      <p class="text-3xl font-semibold text-[#2E7D32] mt-1">
        <%= kpis.projectsActive || 0 %>
      </p>
      <p class="text-xs text-gray-500 mt-1">
        <%= kpis.projectsDelayed || 0 %> con atraso
      </p>
    </div>

    <!-- Carga por tareas -->
    <div class="bg-white p-4 rounded-2xl shadow">
      <p class="text-xs uppercase tracking-wide text-gray-500">
        Tareas abiertas (empresa)
      </p>
      <p class="text-3xl font-semibold text-[#0288D1] mt-1">
        <%= kpis.tasksOpen || 0 %>
      </p>
      <p class="text-xs text-gray-500 mt-1">
        <%= kpis.tasksOverdue || 0 %> vencidas
      </p>
    </div>

    <!-- Cumplimiento -->
    <div class="bg-white p-4 rounded-2xl shadow">
      <p class="text-xs uppercase tracking-wide text-gray-500">
        Cumplimiento mensual
      </p>
      <p class="text-3xl font-semibold text-[#F9A825] mt-1">
        <%= kpis.completionRate || 0 %>%
      </p>
      <p class="text-xs text-gray-500 mt-1">
        Objetivo: <%= kpis.targetCompletion || 90 %>% de cierre.
      </p>
    </div>

    <!-- Tareas recurrentes -->
    <div class="bg-white p-4 rounded-2xl shadow">
      <p class="text-xs uppercase tracking-wide text-gray-500">
        Tareas recurrentes críticas
      </p>
      <p class="text-3xl font-semibold text-[#E64A19] mt-1">
        <%= kpis.recurringCritical || 0 %>
      </p>
      <p class="text-xs text-gray-500 mt-1">
        Con impacto en producción / seguridad.
      </p>
    </div>
  </div>

  <!-- Visión por proyectos y por áreas -->
  <div class="grid gap-6 md:grid-cols-2 mb-6">
    <!-- Proyectos (agrupador de tareas) -->
    <div class="bg-white rounded-2xl shadow p-4">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-lg font-semibold text-gray-800">
          Proyectos en curso
        </h3>
        <span class="text-xs text-gray-500">
          Vista resumida (Top 5 por prioridad)
        </span>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="text-left text-gray-500 border-b text-xs uppercase">
              <th class="py-2 pr-3">Proyecto</th>
              <th class="py-2 pr-3">Área líder</th>
              <th class="py-2 pr-3">% avance</th>
              <th class="py-2">Estado</th>
            </tr>
          </thead>
          <tbody class="divide-y text-xs sm:text-sm">
            <% if (projectsSafe.length) { %>
              <% projectsSafe.forEach(function(p) { %>
                <tr>
                  <td class="py-2 pr-3 font-medium text-gray-800">
                    <%= p.name %>
                  </td>
                  <td class="py-2 pr-3">
                    <%= p.area_name || '-' %>
                  </td>
                  <td class="py-2 pr-3">
                    <span class="font-semibold">
                      <%= p.progress || 0 %>%
                    </span>
                  </td>
                  <td class="py-2">
                    <span
                      class="px-2 py-0.5 rounded-full text-[11px] font-semibold
                      <%= p.status === 'active' ? 'bg-[#E3F2FD] text-[#1565C0]'
                        : p.status === 'paused' ? 'bg-[#FFF3E0] text-[#EF6C00]'
                        : 'bg-[#FFEBEE] text-[#C62828]' %>">
                      <%= p.status %>
                    </span>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="py-3 text-center text-xs text-gray-500">
                  Aún no hay proyectos configurados.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Áreas (carga y salud) -->
    <div class="bg-white rounded-2xl shadow p-4">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-lg font-semibold text-gray-800">Áreas de la empresa</h3>
        <span class="text-xs text-gray-500">
          Carga de trabajo y cumplimiento.
        </span>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="text-left text-gray-500 border-b text-xs uppercase">
              <th class="py-2 pr-3">Área</th>
              <th class="py-2 pr-3">Tareas abiertas</th>
              <th class="py-2 pr-3">% cierre mes</th>
              <th class="py-2">Riesgo</th>
            </tr>
          </thead>
          <tbody class="divide-y text-xs sm:text-sm">
            <% if (areasSummarySafe.length) { %>
              <% areasSummarySafe.forEach(function(a) { %>
                <tr>
                  <td class="py-2 pr-3 font-medium text-gray-800">
                    <%= a.name %>
                  </td>
                  <td class="py-2 pr-3">
                    <%= a.tasksOpen || 0 %>
                  </td>
                  <td class="py-2 pr-3">
                    <%= a.completionRate || 0 %>%
                  </td>
                  <td class="py-2">
                    <span
                      class="px-2 py-0.5 rounded-full text-[11px] font-semibold
                      <%= a.risk === 'high' ? 'bg-[#FFEBEE] text-[#C62828]'
                        : a.risk === 'medium' ? 'bg-[#FFF8E1] text-[#F9A825]'
                        : 'bg-[#E8F5E9] text-[#2E7D32]' %>">
                      <%= a.riskLabel || a.risk || 'Bajo' %>
                    </span>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="py-3 text-center text-xs text-gray-500">
                  Sin datos de áreas aún.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Periodicidad y alertas estratégicas -->
  <div class="bg-white rounded-2xl shadow p-4">
    <div class="flex items-center justify-between mb-3">
      <h3 class="text-lg font-semibold text-gray-800">
        Periodicidad de tareas y alertas
      </h3>
      <span class="text-xs text-gray-500">
        Resumen de tareas diarias, semanales y mensuales.
      </span>
    </div>

    <div class="grid gap-4 md:grid-cols-3 text-xs sm:text-sm">
      <!-- Resumen de recurrencia -->
      <div>
        <p class="text-gray-500 mb-1">Resumen de tareas recurrentes</p>
        <ul class="space-y-1">
          <li class="flex justify-between">
            <span>Diarias</span>
            <span class="font-semibold">
              <%= recurringSummarySafe.daily || 0 %>
            </span>
          </li>
          <li class="flex justify-between">
            <span>Semanales</span>
            <span class="font-semibold">
              <%= recurringSummarySafe.weekly || 0 %>
            </span>
          </li>
          <li class="flex justify-between">
            <span>Mensuales</span>
            <span class="font-semibold">
              <%= recurringSummarySafe.monthly || 0 %>
            </span>
          </li>
        </ul>
      </div>

      <!-- Próximas tareas clave -->
      <div>
        <p class="text-gray-500 mb-1">Próximas tareas críticas</p>
        <ul class="space-y-1">
          <% if (nextCriticalTasksSafe.length) { %>
            <% nextCriticalTasksSafe.forEach(function(t) { %>
              <li>
                <span class="font-medium"><%= t.title %></span>
                <span class="block text-[11px] text-gray-500">
                  Próxima ejecución: <%= t.next_run_human %> · Responsable: <%= t.owner_name %>
                </span>
              </li>
            <% }) %>
          <% } else { %>
            <li class="text-xs text-gray-500">
              No hay tareas críticas recurrentes configuradas.
            </li>
          <% } %>
        </ul>
      </div>

      <!-- Alertas estratégicas -->
      <div>
        <p class="text-gray-500 mb-1">Alertas estratégicas</p>
        <ul class="space-y-1">
          <% if (strategicAlertsSafe.length) { %>
            <% strategicAlertsSafe.forEach(function(a) { %>
              <li>
                <span class="font-medium"><%= a.title %></span>
                <span class="block text-[11px] text-gray-500"><%= a.detail %></span>
              </li>
            <% }) %>
          <% } else { %>
            <li class="text-xs text-gray-500">
              Sin alertas críticas por ahora. Mantener seguimiento periódico.
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</section>

