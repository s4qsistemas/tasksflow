<!-- Script tabs proyectos -->
<script>
  function switchProjectTab(mode) {
    const tabReg = document.getElementById('tabProjectRegistrar');
    const tabEd = document.getElementById('tabProjectEditar');
    const contentReg = document.getElementById('tabContentProjectRegistrar');
    const contentEd = document.getElementById('tabContentProjectEditar');

    if (!tabReg || !tabEd || !contentReg || !contentEd) return;

    if (mode === 'editar') {
      tabEd.classList.add('border-[#7B1FA2]', 'text-[#7B1FA2]');
      tabEd.classList.remove('border-transparent', 'text-gray-500');

      tabReg.classList.remove('border-[#7B1FA2]', 'text-[#7B1FA2]');
      tabReg.classList.add('border-transparent', 'text-gray-500');

      contentEd.classList.remove('hidden');
      contentReg.classList.add('hidden');
    } else {
      tabEd.classList.remove('border-[#7B1FA2]', 'text-[#7B1FA2]');
      tabEd.classList.add('border-transparent', 'text-gray-500');

      tabReg.classList.add('border-[#7B1FA2]', 'text-[#7B1FA2]');
      tabReg.classList.remove('border-transparent', 'text-gray-500');

      contentEd.classList.add('hidden');
      contentReg.classList.remove('hidden');
    }
  }

  window.switchProjectTab = switchProjectTab;
</script>

