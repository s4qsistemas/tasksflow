  // IDs de áreas activas (inyectadas desde el servidor)
  window.activeAreaIds = <%- JSON.stringify(
    (typeof areas !== 'undefined' && Array.isArray(areas)
      ? areas
          .filter(function (a) { return a.status === 'active'; })
          .map(function (a) { return a.id; })
      : []
    )
